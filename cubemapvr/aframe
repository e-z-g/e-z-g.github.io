  <!-- A-Frame Library -->
  <script src="https://aframe.io/releases/1.7.1/aframe.min.js"></script>
  <style>
    body, html { margin: 0; padding: 0; width: 100%; height: 100%; overflow: hidden; }
    #ui-layer { position: absolute; top: 12px; left: 50%; transform: translateX(-50%); display: flex; gap: 14px; z-index: 101; background: rgba(40,40,40,0.7); border-radius: 8px; padding: 4px 10px; }
    #caption { position: absolute; left: 50%; transform: translateX(-50%); bottom: 54px; z-index: 100; background: rgba(0,0,0,0.7); color: #fff; padding: 8px 18px; border-radius: 5px; font-size: 15px; font-weight: 500; text-align: center; }
    button { color: white; border: none; border-radius: 5px; font-size: 15px; font-weight: bold; padding: 10px 18px; cursor: pointer; min-width:72px; }
  </style>
