<body>
  <div id="ui-layer"></div>
  <div id="caption">This product was created using artwork with ™ and/or © works of Cyan...</div>

  <a-scene vr-mode-ui="enabled: false">
    <!-- Camera at Center -->
    <a-entity position="0 0 0">
      <a-camera look-controls="reverseMouseDrag: true" wasd-controls-enabled="false"></a-camera>
    </a-entity>

    <!-- The 6-Face Cube (Planes facing inward) -->
    <a-plane id="face-front" position="0 0 -5" rotation="0 0 0" width="10" height="10" material="shader: flat; side: double"></a-plane>
    <a-plane id="face-back" position="0 0 5" rotation="0 180 0" width="10" height="10" material="shader: flat; side: double"></a-plane>
    <a-plane id="face-right" position="5 0 0" rotation="0 -90 0" width="10" height="10" material="shader: flat; side: double"></a-plane>
    <a-plane id="face-left" position="-5 0 0" rotation="0 90 0" width="10" height="10" material="shader: flat; side: double"></a-plane>
    <a-plane id="face-top" position="0 5 0" rotation="90 0 0" width="10" height="10" material="shader: flat; side: double"></a-plane>
    <a-plane id="face-bottom" position="0 -5 0" rotation="-90 0 0" width="10" height="10" material="shader: flat; side: double"></a-plane>
  </a-scene>

  <script>
    const baseUrl = 'https://raw.githubusercontent.com/e-z-g/e-z-g.github.io/main/cubemapvr/';
    const versions = [
      { label: '3.9K', suffix: '_ud_trimmed.webp' },
      { label: 'J90', suffix: '_jay.webp' }
    ];
    let currentIndex = 0;

    const faces = {
      'face-front': 'MAWW8', 'face-bottom': 'MAWW9', 'face-back': 'MAWW10',
      'face-right': 'MAWW11', 'face-left': 'MAWW12', 'face-top': 'MAWW13'
    };

    function updateScene(idx) {
      currentIndex = idx;
      const suffix = versions[idx].suffix;
      
      Object.keys(faces).forEach(id => {
        const url = `${baseUrl}${faces[id]}${suffix}`;
        document.getElementById(id).setAttribute('material', 'src', url);
      });
      renderButtons();
    }

    function renderButtons() {
      const container = document.getElementById('ui-layer');
      container.innerHTML = '';
      versions.forEach((v, i) => {
        const btn = document.createElement('button');
        btn.textContent = v.label;
        btn.style.background = (i === currentIndex) ? '#2259E8' : '#558CFE';
        btn.onclick = () => updateScene(i);
        container.appendChild(btn);
      });
    }

    // Initialize
    window.onload = () => updateScene(0);
  </script>
</body>
</html>
